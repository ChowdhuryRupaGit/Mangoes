@using WebAppMango.Models.DTO;
@model ProductDTO

<form asp-action="ProductUpdate" method="post">
    <input asp-for="ProductId" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-dark text-center"> Update Product </h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px">Product Name</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Name" />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px">Price</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Price" />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px">Category Name</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="CategoryName" />

            </div>
              <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px">Decription</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Description" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px">ImageUrl</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="ImageUrl" />
            </div>

            <div class="col-5 offset-2">
                <a class="btn-primary btn form-control" asp-action="ProductIndex">Back To List</a>
            </div>
            <div class="col-5">
                <input type="submit" class="btn btn-danger form-control" value="Update" />
            </div>
        </div>
    </div>
</form>


