@using WebAppMango.Models.DTO;
@model CouponDTO

<form asp-action="CouponDelete" method="post">
    <input asp-for="CouponId" hidden/>
    <input asp-for="DiscountAmount" hidden />
    <input asp-for="MinAmount" hidden />
    <input asp-for="CouponCode" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-dark text-center"> Delete Coupon </h1>
        
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px">Coupon Code</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" disabled asp-for="CouponCode" />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px">Discount Amount</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" disabled asp-for="DiscountAmount" />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px">Minimum Amount</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" disabled asp-for="MinAmount" />

            </div>

            <div class="col-5 offset-2">
                <a class="btn-primary btn form-control" asp-action="CouponIndex">Back To List</a>
            </div>
            <div class="col-5">
                <input type="submit" class="btn btn-danger form-control" value="Delete" />
            </div>
        </div>
    </div>
</form>


